{% extends 'base.html.twig' %}

{% block title %}Stanza del cittadino{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block header %}

    <header class="it-header-wrapper it-header-sticky">
        <div class="it-header-slim-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="it-header-slim-wrapper-content"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="it-nav-wrapper">
            <div class="it-header-center-wrapper">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="it-header-center-content-wrapper">
                                <div class="it-brand-wrapper">
                                    <a href="{{ path('home') }}">
                                        <img class="icon" src="{{ asset('bundles/app/images/logo-stanza.png') }}"
                                             alt="{{ 'title'|trans }}"/>
                                        <div class="it-brand-text">
                                            <h2 class="no_toc">{{ 'title'|trans }}</h2>
                                        </div>
                                    </a>
                                </div>
                                <div class="it-right-zone">
                                    <div class="it-socials d-none d-md-flex"></div>
                                    <div class="it-search-wrapper"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block content_container %}
    <main>
        <div class="container my-4">
            <div class="card-wrapper card-column">
            {% for ente in enti %}
                <div class="card card-teaser rounded shadow">
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="/{{ ente.slug }}">{{ ente.name }}</a>
                        </h4>
                        <div class="card-text">
                            <p>Entra nella stanza del cittadino del {{ ente.name }}</p>
                        </div>
                    </div>
                    <div class="avatar size-xl">
                        <img src="{{ asset('bundles/app/images/logo-' ~ ente.slug ~ '.png') }}" alt="{{ 'title'|trans }}">
                    </div>
                </div>
            {% endfor %}

            </div>
        </div>
    </main>
{% endblock %}

{% block footer %}
{% endblock %}

{% block javascripts %}

    {{ encore_entry_script_tags('app') }}
{% endblock %}
