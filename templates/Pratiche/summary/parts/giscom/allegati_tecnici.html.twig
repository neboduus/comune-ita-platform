<div class="row">
  <div class="col-xs-12 col-sm-3">
    <strong>{{ 'steps.scia.allegati_tecnici.tipo_intervento_label'|trans() }}</strong>
  </div>
  <div class="col-xs-12 col-sm-9">{% if pratica.dematerializedForms.tipoIntervento %}
      {{ ('steps.scia.allegati_tecnici.tipi_intervento.' ~ pratica.dematerializedForms.tipoIntervento)|trans() }}
    {% endif %}</div>
</div>

<div class="row">
  <div class="col-12 pt-2"><strong>{{ 'steps.scia.allegati_tecnici.label'|trans() }}</strong></div>
  <div class="col-3"></div>
  <div class="col-9">
    {% set has_data = false %}
    {% if pratica.dematerializedForms.elencoAllegatiTecnici is defined %}
      <div id="no-more-tables">
        <table class="table table-striped table-sm cf">
          <thead class="cf">
          <tr>
            <th>{{ 'pratica.dettaglio.allegato.file'|trans }}</th>
            <th>{{ 'pratica.dettaglio.allegato.descrizione'|trans }}</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          {% for key, v in pratica.dematerializedForms.elencoAllegatiTecnici %}
            {% if v|length > 0 %}
              {% set has_data = true %}
              {% for f in v %}
                {% if f.id|length>0 %}
                  <tr>
                    <td data-title="{{ 'pratica.dettaglio.allegato.file'|trans }}">
                      {{ f.name }} {% if allegati[f.id] is defined and allegati[f.id].numero_protocollo %}<br/><small>( {{ allegati[f.id].numero_protocollo }} )</small>{% endif %}
                    </td>
                    <td data-title="{{ 'pratica.dettaglio.allegato.descrizione'|trans }}">
                      {% if allegati[f.id] is defined and allegati[f.id].description %}<small>{{ allegati[f.id].description }}</small>{% endif %}
                    </td>
                    <td data-title="" class="text-right">
                      {{ include('Pratiche/summary/parts/download_allegato.html.twig', {'pratica':pratica, 'user': user, 'allegato_id': f.id}) }}
                    </td>
                  </tr>
                {% endif %}
              {% endfor %}
            {% endif %}
          {% endfor %}
          {% if not has_data %}
            <td colspan="3"><em>{{ 'pratica.nessun_file_specificato'|trans() }}</em></td>
          {% endif %}
          </tbody>
        </table>
      </div>
    {% endif %}
  </div>
</div>
