{% extends 'Default/index.html.twig' %}

{% block main_content %}

    {% if sticky_services %}
        <section class="container px-4 my-4">
            <div class="pb-5">
                <div class="container px-4">
                    <div class="row mt-5">
                        <div class="col">
                            <h3 class="mb-4 text-primary">{{ 'servizi_primo_piano'|trans() }}</h3>
                        </div>
                    </div>
                    <div class="row">
                        {% for servizio in sticky_services %}
                            <div class="col-12">
                                {{ include('Servizi/parts/panel/servizio_sticky.html.twig') }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

    <section class="container px-4 my-4">
        <div class="pb-5">
            <div class="container px-4">
                <div class="row mt-5">
                    <div class="col">
                        <h3 class="mb-4 text-primary">In evidenza</h3>
                    </div>
                </div>
                <div class="row">
                    {% for servizio in servizi %}
                        <div class="col-12 col-sm-6 col-lg-4">
                            {{ include('Servizi/parts/panel/servizio.html.twig') }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
