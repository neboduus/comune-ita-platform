{% if item.userGroups %}
  <h2 class="title mb-3">{{ 'servizio.contatti' | trans }}</h2>

  <div class="row mb-4">
    {% for group in item.userGroups %}
      <div class="col-12 col-md-8 col-lg-6 mb-30">
        <div class="card-wrapper rounded h-auto mt-10">
          <div class="card card-teaser card-teaser-100 rounded shadow-sm p-3">
            <div class="col-9">
              <div class="card-body pe-3">
                <p class="card-title text-paragraph-regular-medium-semi mb-3 font-weight-bold">
                  {% if group.coreContactPoint and group.coreContactPoint.url %}
                    <a class="text-decoration-none" href="{{ group.coreContactPoint.url }}" target="_blank">{{ group.name }}</a>
                  {% else %}
                    <b>{{ group.name }}</b>
                  {% endif %}
                </p>
                {% if group.coreContactPoint %}
                  <div class="card-text">
                    {% if group.coreLocation and group.coreLocation.address
                      and group.coreLocation.address.street_address
                      and group.coreLocation.address.post_office_box_number %}
                      <p class="u-main-black text-truncate">
                        {{ group.coreLocation.address.street_address }}
                        {{ group.coreLocation.address.post_office_box_number }}
                        {% if group.coreLocation.address.postal_code %}
                          , {{ group.coreLocation.address.postal_code }}
                        {% endif %}
                      </p>
                    {% endif %}
                    {% if group.coreContactPoint.phoneNumber %}
                      <p class="u-main-black text-truncate"><a href="tel:{{ group.coreContactPoint.phoneNumber }}">{{ group.coreContactPoint.phoneNumber }}</a></p>
                    {% endif %}
                    {% if group.coreContactPoint.email %}
                      <p class="u-main-black text-truncate"><a href="mailto:{{ group.coreContactPoint.email }}">{{ group.coreContactPoint.email }}</a></p>
                    {% endif %}
                    {% if group.coreContactPoint.pec %}
                      <p class="u-main-black text-truncate"><a href="mailto:{{ group.coreContactPoint.pec }}">{{ group.coreContactPoint.pec }}</a></p>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </div>
            <div class="col-3">
              {{ generateInitialsAvatar(group.name, 'xl', 'random')|raw }}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}
