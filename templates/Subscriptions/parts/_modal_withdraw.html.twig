<div id="withdraw-subscription-modal" class="modal fade bd-example-modal-sm text-left edit-subscription-modal" tabindex="-1" role="dialog"
     aria-labelledby="{{ 'iscrizioni.modals.withdraw_subscription' | trans }}" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <svg class="icon icon-info">
          <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-info-circle"></use>
        </svg>
        <h5
          class=" modal-title text-info align-self-center ml-2">{{ 'iscrizioni.modals.withdraw_subscription' | trans }}</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <svg class="icon">
            <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-close"></use>
          </svg>
        </button>
      </div>
      <div class="modal-body">
        <div>
          <h6 class="text-info">{{ 'iscrizioni.modals.confirm_withdraw.description_title' | trans }}</h6>
          <p>{{ 'iscrizioni.modals.confirm_withdraw.description_text' | trans }}</p>
        </div>
        <div class="mt-4">
          {{ include('@App/Subscriptions/parts/spinner.html.twig') }}
          <div class="my-2 text-danger small error">
            <p>{{ 'backoffice.integration.subscriptions.update_subscription_error' | trans }}</p>
            <ul></ul>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-outline-secondary btn-sm" type="button" id="cancel-delete-btn" data-dismiss="modal">
          {{ 'annulla'| trans }}
        </button>
        <button class="btn btn-100 btn-sm toggle-status-btn-modal action-btn" data-status="{{ constant('\\App\\Entity\\Subscription::STATUS_WITHDRAW') }}">
          {{ 'withdraw' | trans }}
        </button>
      </div>
    </div>
  </div>
</div>
