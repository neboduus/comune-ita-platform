<div id="edit-subscription-modal" class="modal fade bd-example-modal-sm text-left edit-subscription-modal" tabindex="-1" role="dialog"
     aria-labelledby="{{ 'iscrizioni.modals.edit_subscription' | trans }}" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <svg class="icon icon-warning">
          <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-warning-circle"></use>
        </svg>
        <h5
          class=" modal-title text-warning align-self-center ml-2">{{ 'iscrizioni.modals.edit_subscription' | trans }}</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <svg class="icon">
            <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-close"></use>
          </svg>
        </button>
      </div>
      <div class="modal-body">
        <div>
          <h6 class="text-warning">{{ 'iscrizioni.modals.confirm_edit.description_title' | trans }}</h6>
          <p>{{ 'iscrizioni.modals.confirm_edit.description_text' | trans }}</p>
        </div>
        <div class="select-wrapper mt-4">
          <select title="{{ 'backoffice.integration.subscription_service.select_option' | trans }}" id="new-subscription-service" data-live-search="true" data-live-search-placeholder="Cerca opzioni">
            {% for subscriptionService in subscriptionServices %}
              <option value="{{ subscriptionService.id }}">{{ subscriptionService.name }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="mt-4">
          {{ include('Subscriptions/parts/spinner.html.twig') }}
          <div class="my-2 text-danger small error">
            <p>{{ 'backoffice.integration.subscriptions.update_subscription_error' | trans }}</p>
            <ul></ul>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-outline-secondary btn-sm" type="button" id="cancel-delete-btn" data-dismiss="modal">
          {{ 'annulla'| trans }}
        </button>
        <button class="btn btn-secondary btn-sm edit-btn-modal action-btn">
          {{ 'modifica' | trans }}
        </button>
      </div>
    </div>
  </div>
</div>
