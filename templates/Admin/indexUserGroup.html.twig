{% extends 'Default/index.html.twig' %}

{% block main_content %}
<section id="intro" class="container my-4">
  <div class="row">
    <div class="col-lg-12">
      <h2>{{ 'user_group.title' | trans() }}</h2>
    </div>

    <div class="col-lg-12">
      <div id="no-more-tables">
        <table class="table table-striped table-condensed cf">
          <thead>
          <tr>
            <th>{{ 'general.nome' | trans() }}</th>
            <th>{{ 'servizio.categoria' | trans() }}</th>
            <th>{{ 'user_group.manager' | trans() }}</th>
            <th>{{ 'gruppo_di_servizi.azioni' | trans() }}</th>
          </tr>
          </thead>
          <tbody>
          {% for item in items %}
            <td data-title="Nome">
              <a href="{{ path('admin_user_group_edit', { 'id': item.id }) }}">{{ item.name }}</a>
            </td>
            <td>{{ (item.topic) ? item.topic.name : '' }}</td>
            <td>{{ (item.manager) ? item.manager.username : '' }}</td>
            <td data-title="Azioni" class="actions">
              <a class="btn btn-secondary btn-xs" href="{{ path('admin_user_group_edit', { 'id': item.id }) }}">
                {{ 'gruppo_di_servizi.modifica' | trans() }}
              </a>
              <a class="btn btn-danger btn-xs"
                 onclick="return confirm('{{ 'operatori.delete_service_group' | trans }}');"
                 href="{{ path('admin_user_group_delete', { 'id': item.id }) }}">{{ 'elimina' | trans }}</a>
            </td>

            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
      <a class="btn btn-primary" href="{{ path('admin_user_group_new') }}">{{ 'gruppo_di_servizi.crea' | trans() }}</a>
    </div>
  </div>
</section>
{% endblock %}
