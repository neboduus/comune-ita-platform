<label style="font-weight: 600; padding: 0 0.5rem;">{{ "calendars.opening_hours.opening_hours" | trans }}</label>
<fieldset class="bg-light p-3 mb-3">
  <div id="opening_hours"
       data-prototype='
          <div id="App_calendar_opening_hours___name__">
            <div class="row">
              <div class="col-12 form-group">
                <label for="App_calendar_opening_hours___name___name" class="required active">{{ 'calendars.opening_hours.name' | trans }}</label>
                <input type="text" id="App_calendar_opening_hours___name___name" name="App_calendar[opening_hours][__name__][name]" required="required" class="form-control">
                <span class="text-info px-2" id="io_helper"><i class="fa fa-info-circle"></i>{{ 'calendars.opening_hours.name_helper' | trans }}</span>
              </div>
            </div>
            <div class="row">
                <div class="col-6">
                  <div class="form-group"><label for="App_calendar_opening_hours___name___start_date" class="required">{{ 'calendars.opening_hours.start_date' | trans }}</label><input type="date" id="App_calendar_opening_hours___name___start_date" name="App_calendar[opening_hours][__name__][start_date]"  value="{{ "now"|date('Y-m-d')}}" required="required" class="form-control"></div>
                  <div class="form-group"><label for="App_calendar_opening_hours___name___begin_hour" class="required">{{ 'calendars.opening_hours.begin_hour' | trans }}</label><input type="time" id="App_calendar_opening_hours___name___begin_hour" name="App_calendar[opening_hours][__name__][begin_hour]" required="required" class="form-control"></div>
                </div>
                <div class="col-6">
                  <div class="form-group"><label for="App_calendar_opening_hours___name___end_date" class="required">{{ 'calendars.opening_hours.end_date' | trans }}</label><input type="date" id="App_calendar_opening_hours___name___end_date" name="App_calendar[opening_hours][__name__][end_date]" value="{{ "last day of december" |date('Y-m-d')}}" required="required" class="form-control"></div>
                  <div class="form-group"><label for="App_calendar_opening_hours___name___end_hour" class="required">{{ 'calendars.opening_hours.end_hour' | trans }}</label><input type="time" id="App_calendar_opening_hours___name___end_hour" name="App_calendar[opening_hours][__name__][end_hour]" required="required" class="form-control"></div>
                </div>
            </div>
            <fieldset class="form-group">
              <legend class="col-form-label">{{ 'calendars.opening_hours.days_of_week' | trans }}</legend>
              <div id="App_calendar_opening_hours___name___days_of_week">
                <div class="form-check">
                  <input type="checkbox" id="App_calendar_opening_hours___name___days_of_week_0" name="App_calendar[opening_hours][__name__][days_of_week][]" class="form-check-input" value="1">
                  <label class="form-check-label" for="App_calendar_opening_hours___name___days_of_week_0">{{ 'calendars.opening_hours.weeks.week_day_1' | trans }}</label>
                </div>
                <div class="form-check">
                  <input type="checkbox" id="App_calendar_opening_hours___name___days_of_week_1" name="App_calendar[opening_hours][__name__][days_of_week][]" class="form-check-input" value="2">
                  <label class="form-check-label" for="App_calendar_opening_hours___name___days_of_week_1">{{ 'calendars.opening_hours.weeks.week_day_2' | trans }}</label>
                </div>
                <div class="form-check">
                  <input type="checkbox" id="App_calendar_opening_hours___name___days_of_week_2" name="App_calendar[opening_hours][__name__][days_of_week][]" class="form-check-input" value="3">
                  <label class="form-check-label" for="App_calendar_opening_hours___name___days_of_week_2">{{ 'calendars.opening_hours.weeks.week_day_3' | trans }}</label>
                </div>
                <div class="form-check">
                  <input type="checkbox" id="App_calendar_opening_hours___name___days_of_week_3" name="App_calendar[opening_hours][__name__][days_of_week][]" class="form-check-input" value="4">
                  <label class="form-check-label" for="App_calendar_opening_hours___name___days_of_week_3">{{ 'calendars.opening_hours.weeks.week_day_4' | trans }}</label>
                </div>
                <div class="form-check">
                  <input type="checkbox" id="App_calendar_opening_hours___name___days_of_week_4" name="App_calendar[opening_hours][__name__][days_of_week][]" class="form-check-input" value="5">
                  <label class="form-check-label" for="App_calendar_opening_hours___name___days_of_week_4">{{ 'calendars.opening_hours.weeks.week_day_5' | trans }}</label>
                </div>
                <div class="form-check">
                  <input type="checkbox" id="App_calendar_opening_hours___name___days_of_week_5" name="App_calendar[opening_hours][__name__][days_of_week][]" class="form-check-input" value="6">
                  <label class="form-check-label" for="App_calendar_opening_hours___name___days_of_week_5">{{ 'calendars.opening_hours.weeks.week_day_6' | trans }}</label>
                </div>
                <div class="form-check">
                  <input type="checkbox" id="App_calendar_opening_hours___name___days_of_week_6" name="App_calendar[opening_hours][__name__][days_of_week][]" class="form-check-input" value="7">
                  <label class="form-check-label" for="App_calendar_opening_hours___name___days_of_week_6">{{ 'calendars.opening_hours.weeks.week_day_7' | trans }}</label>
                </div>
              </div>
            </fieldset>
            <div class="col-12">
                <div class="form-group">
                  <div class="form-check">
                    <input type="checkbox" id="App_calendar_opening_hours___name___is_moderated" name="App_calendar[opening_hours][__name__][is_moderated]" class="form-check-input">
                    <label class="form-check-label" for="App_calendar_opening_hours___name___is_moderated">{{ 'calendars.opening_hours.is_moderated' | trans }}</label>
                  </div>
                </div>
              </div>
            <div class="row">
              <div class="col-6">
                <div class="form-group"><label for="App_calendar_opening_hours___name___meeting_queue" class="required active" style="transition: none;">{{ 'calendars.opening_hours.meeting_queue' | trans }}</label><input type="text" id="App_calendar_opening_hours___name___meeting_queue" name="App_calendar[opening_hours][__name__][meeting_queue]" value="1" required="required" class="form-control"></div>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                <div class="form-group"><label for="App_calendar_opening_hours___name___meeting_minutes" class="required active" style="transition: none;">{{ 'calendars.opening_hours.meeting_minutes' | trans }}</label><input type="text" id="App_calendar_opening_hours___name___meeting_minutes" name="App_calendar[opening_hours][__name__][meeting_minutes]" value="30" required="required" class="form-control"></div>
              </div>
              <div class="col-6">
                <div class="form-group"><label for="App_calendar_opening_hours___name___interval_minutes" class="required active" style="transition: none;">{{ 'calendars.opening_hours.interval_minutes' | trans }}</label><input type="text" id="App_calendar_opening_hours___name___interval_minutes" name="App_calendar[opening_hours][__name__][interval_minutes]" value="0" required="required" class="form-control"></div>
              </div>
            </div>
            <div class="form-row float-right">
              <div class="form-group">
                <a class="btn btn-danger btn-xs js-remove-opening_hour" href="#">
                  <svg class="icon icon-sm icon-white"><use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-delete"></use></svg>
                  <span>{{ 'calendars.opening_hours.remove' | trans }}</span>
                </a>
              </div>
            </div>
          </div>
          <div class="clearfix mb-4"></div>'
       data-widget-opening_hour="{{ '<div class="js-opening_hour-item"></div>'|e }}"
       data-widget-counter="{{ form.opening_hours|length }}">
    {% if form.opening_hours|length > 0 %}
      {% for opening_hour in form.opening_hours %}
        <div class="js-opening_hour-item">
          <div id="App_calendar_opening_hours___name__">
            <div class="row">
              <div class="form-group col-12">
                {{ form_label(opening_hour.name) }}
                {{ form_widget(opening_hour.name) }}
                <span class="text-info px-2"><i class="fa fa-info-circle"></i> {{ 'calendars.opening_hours.name_helper' | trans }}</span>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                {{ form_row(opening_hour.start_date) }}
                {{ form_row(opening_hour.begin_hour) }}
              </div>
              <div class="col-6">
                {{ form_row(opening_hour.end_date) }}
                {{ form_row(opening_hour.end_hour) }}
              </div>
            </div>
            {{ form_row(opening_hour.days_of_week) }}
            <div class="row">
              <div class="col-12">
                {{ form_row(opening_hour.is_moderated) }}
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                {{ form_row(opening_hour.meeting_queue) }}
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                {{ form_row(opening_hour.meeting_minutes) }}
              </div>
              <div class="col-6">
                {{ form_row(opening_hour.interval_minutes) }}
              </div>
            </div>
            <div class="form-row float-right">
              <div class="form-group">
                <a class="btn btn-danger btn-xs js-remove-opening_hour" href="#">
                  <svg class="icon icon-sm icon-white">
                    <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-delete"></use>
                  </svg>
                  <span>{{ "calendars.opening_hours.remove" | trans }}</span>
                </a>
              </div>
            </div>
            <div class="clearfix mb-4"></div>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <div class="alert alert-info" id="no-opening_hours">{{ "calendars.opening_hours.no_opening_hours" | trans }}</div>
    {% endif %}
  </div>
  <button type="button"
          class="add-another-opening_hour-widget btn btn-xs btn-primary"
          class="add-another-opening_hour-widget btn btn-xs btn-primary"
          data-list-selector="#opening_hours">{{ "calendars.opening_hours.add" | trans }}
  </button>
</fieldset>

