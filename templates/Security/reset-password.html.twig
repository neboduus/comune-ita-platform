{% extends 'Default/index.html.twig' %}

{% block main_content %}
  <section id="intro" class="container px-4 my-4">
    <div class="row">
      <div class="col-lg-12 px-lg-4 py-lg-2">
        <h2>Problemi di accesso?</h2>
        <p>Inserisci il tuo indirizzo e-mail e ti invieremo un link per accedere di nuovo al tuo account.</p>
      </div>


      <div class="col-lg-12 px-lg-4 py-lg-2 mt-4">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}

        {{ form_rest(form) }}
        <div class="form-row">
          <div class="col-12">
            <div class="form-group">
              <button type="submit" class="btn-primary btn-lg btn-block btn">Invia</button>
            </div>
          </div>
        </div>

        {{ form_end(form) }}
      </div>
    </div>
  </section>
{% endblock %}
