{% extends 'Default/index.html.twig' %}
{% block main_content %}

  <section id="intro" class="container px-4 my-4">
    <div class="row justify-content-center">
      <div class="col-lg-8 px-lg-4 py-lg-2">
        <h2>Modifica password</h2>
      </div>
      <div class="col-lg-8 px-lg-4 py-lg-2">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-row">
          <div class="form-group col-12">
            {{ form_label(form.plainPassword.first) }}
            <div class="form-control-wrap">
              <a tabindex="-1" href="#" class="form-icon form-icon-right passcode-switch"
                 data-target="new_password_plainPassword_first">
                <em class="passcode-icon icon-show icon ni ni-eye"></em>
                <em class="passcode-icon icon-hide icon ni ni-eye-off"></em>
              </a>
              {{ form_widget(form.plainPassword.first) }}
            </div>
          </div>
          <div class="form-group col-12">
            {{ form_label(form.plainPassword.second) }}
            <div class="form-control-wrap">
              <a tabindex="-1" href="#" class="form-icon form-icon-right passcode-switch"
                 data-target="new_password_plainPassword_second">
                <em class="passcode-icon icon-show icon ni ni-eye"></em>
                <em class="passcode-icon icon-hide icon ni ni-eye-off"></em>
              </a>
              {{ form_widget(form.plainPassword.second) }}
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="col-12">
            <div class="form-group">
              <button type="submit" class="btn-primary btn-lg btn-block btn">Modifica password</button>
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </section>
{% endblock %}
