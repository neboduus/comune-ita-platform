{% extends 'Default/index.html.twig' %}
{% block main_content %}

<section id="intro" class="container px-4 my-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 px-lg-4 py-lg-2">
      <h1>Effettua l'accesso</h1>
    </div>
    <div class="col-lg-8 px-lg-4 py-lg-2">

      {% if error %}
        <div class="alert alert-fill alert-danger alert-dismissible alert-icon">
          <em class="icon ni ni-cross-circle"></em>
          <strong>Errore!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
          <button class="close" data-dismiss="alert"></button>
        </div>
      {% endif %}

      <form name="login_form" method="post" class="form-validate is-alter">
        <div class="form-group pt-3">
          <label class="form-label" for="login_form_username">Username</label>
          <div class="form-control-wrap">
            <input type="text" id="login_form_username" name="_username" class="form-control" tabindex="1" placeholder="Inserisci la tua username" required autofocus>
          </div>
        </div>
        <div class="form-group">
          <label class="form-label" for="login_form_password">Password</label>
          <div class="form-control-wrap">
            <input type="password" class="form-control" minlength="4" name="_password"
                   id="login_form_password" tabindex="2"
                   placeholder="Inserisci la tua password">
            <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
          </div>
        </div>
        <div class="form-group pt-4">
          <button type="submit" class="btn-primary btn-lg btn-block btn">Accedi</button>
        </div>
      </form><!-- form -->

      <div class="form-note-s2 pt-3">
          Password dimenticata? <a href="{{ url('reset_password') }}"><strong>Reimposta</strong></a>
      </div>
    </div>
  </div>
</section>
{% endblock %}
