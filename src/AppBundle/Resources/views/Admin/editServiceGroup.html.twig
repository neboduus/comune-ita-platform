{% extends '@App/Default/index.html.twig' %}

{% block javascripts %}
  {{ encore_entry_script_tags('service-group-manager') }}
{% endblock %}

{% block main_content %}
  <section id="intro" class="container px-4 my-4">
    <div class="row">
      <div class="col-lg-12 px-lg-4 py-lg-2">
        <h2>Modifica - {{ item.name }}</h2>
      </div>


      <div class="col-lg-12 px-lg-4 py-lg-2 mt-4">
        {{ form_start(form) }}
        {{ form_widget(form) }}
      </div>

      <div class="col-lg-12 px-lg-4 py-lg-2">
        <div class="form-group">
          <label>Servizi facenti parte del gruppo</label>
          <ul>
            {% for service in item.services %}
              <li>{{ service.name }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <input class="btn btn-primary mr-1" type="submit" value="Salva" style="float: left"/>
      <a class="btn btn-100 mr-1" href="{{ path('admin_service_group_index') }}" style="float: left">Torna alla lista</a>
      {{ form_end(form) }}
    </div>
  </section>
{% endblock %}
