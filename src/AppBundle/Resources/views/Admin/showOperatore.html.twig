{% extends '@App/Default/index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
    <section id="intro" class="container px-4 my-4">
        <div class="row">
            <div class="col-lg-12 px-lg-4 py-lg-2">
                <h2>Operatoreuser</h2>
            </div>

            <div class="col-lg-12 px-lg-4 py-lg-2 mt-4">
                <div id="no-more-tables">
                    <table class="table table-bordered table-striped table-condensed cf">
                        <tbody>
                        <tr>
                            <th>Nome</th>
                            <td>{{ operatoreUser.fullName }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ operatoreUser.username }}</td>
                        </tr>
                        <tr>
                            <th>Ultima modifica password</th>
                            <td>{% if operatoreUser.lastChangePassword %}{{ operatoreUser.lastChangePassword|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ operatoreUser.email }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-8">
                        <a class="btn btn-default btn-sm" href="{{ path('admin_operatore_index') }}">Torna alla lista</a>
                        <a class="btn btn-warning btn-sm" href="{{ path('admin_operatore_edit', { 'id': operatoreUser.id }) }}">Modifca</a>
                    </div>
                    <div class="col-4">
                        {{ form_start(delete_form) }}
                        <input class="btn btn-danger btn-sm" type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
