{% extends '@App/Default/index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
    <section id="intro" class="container px-4 my-4">
        <div class="row">
            <div class="col-lg-12 px-lg-4 py-lg-2">
                <h2>Servizi</h2>
            </div>

            <div class="col-lg-12 px-lg-4 py-lg-2 mt-4">
                <div id="no-more-tables">
                    <table class="table table-striped table-condensed cf">
                    <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Stato</th>
                        <th>Azioni</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td data-title="Nome">
                                <a href="{{ path('admin_servizio_edit', { 'servizio': item.id }) }}">{{ item.name }}</a>
                            </td>
                            <td data-title="Stato">
                                {{ statuses[item.status] }}
                            </td>
                            <td data-title="Azioni" class="actions">
                                <a class="btn btn-warning btn-xs" href="{{ path('admin_servizio_edit', { 'servizio': item.id }) }}">Modifica</a>
                                <a class="btn btn-danger btn-xs" onclick="return confirm('Sei sicuro di procedere? Il servizio e il modulo collegato verrano eliminati definitivamente.');" href="{{ path('admin_servizio_delete', { 'id': item.id }) }}">Elimina</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
                <a class="btn btn-success btn-primary mt-3" href="{{ path('admin_service_new') }}">Crea nuovo servizio</a>
            </div>
        </div>
    </section>
{% endblock %}
