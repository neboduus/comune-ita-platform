{% extends '@App/Default/index.html.twig' %}

{% block main_content %}
  <section id="intro" class="container my-4">
    <div class="row">
      <div class="col-lg-12">
        <h2>Gruppo di servizi</h2>
      </div>

      <div class="col-lg-12">
        <div id="no-more-tables">
          <table class="table table-striped table-condensed cf">
            <thead>
            <tr>
              <th>Nome</th>
              <th>Descrizione</th>
              <th>Protocollazione in fascicoli</th>
              <th>Azioni</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
              <tr>
                <td data-title="Nome">
                  <a href="{{ path('admin_service_group_edit', { 'id': item.id }) }}">{{ item.name }}</a>
                </td>
                <td>{{ item.description|raw }}</td>
                <td>{% if item.registerInFolder %} Attivata {% else %} Disattivata {% endif %}</td>
                <td data-title="Azioni" class="actions">
                  <a class="btn btn-secondary btn-xs" href="{{ path('admin_service_group_edit', { 'id': item.id }) }}">Modifica</a>
                  <a class="btn btn-danger btn-xs"
                     onclick="return confirm('Sei sicuro di procedere? Il gruppo di servizi verrÃ  eliminato definitivamente.');"
                     href="{{ path('admin_service_group_delete', { 'id': item.id }) }}">Elimina</a>
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
        <a class="btn btn-primary" href="{{ path('admin_service_group_new') }}">Crea nuovo gruppo di servizi</a>
      </div>
    </div>
  </section>
{% endblock %}
