{% if pratica.status < 5000 %}
  <div class="row mb-5">
    {% if not pratica.servizio.praticaFlowOperatoreServiceName or pratica.servizio.praticaFlowOperatoreServiceName == 'ocsdc.form.flow.standardoperatore' %}
      {{ include('@App/Operatori/parts/change_status_modal.html.twig') }}
      <div class="col-6 d-flex justify-content-center">
        <button class="btn btn-secondary" id="modal_refuse" data-toggle="modal"
                data-target=".bd-example-modal-lg">
          <svg class="icon icon-light">
            <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-close"></use>
          </svg>
          {{ 'operatori.rigetta' | trans }}
        </button>
      </div>
      <div class="col-6 d-flex justify-content-center">
        <button class="btn btn-primary" id="modal_approve" data-toggle="modal"
                data-target=".bd-example-modal-lg">
          <svg class="icon icon-light">
            <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-check"></use>
          </svg>
          {{ 'operatori.approva' | trans }}
        </button>
      </div>
    {% else %}
      <div class="col-6 d-flex justify-content-center">
        <a href="{{ path('operatori_elabora_pratica', {'pratica': pratica}) }}" class="btn btn-secondary">
          <svg class="icon icon-light">
            <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-close"></use>
          </svg>
          {{ 'operatori.rigetta' | trans }}
        </a>
      </div>
      <div class="col-6 d-flex justify-content-center">
        <a href="{{ path('operatori_elabora_pratica', {'pratica': pratica}) }}" class="btn btn-primary">
          <svg class="icon icon-light">
            <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-check"></use>
          </svg>
          {{ 'operatori.approva' | trans }}
        </a>
      </div>
    {% endif %}
  </div>
{% else %}
  <div class=" alert alert-info mb-5">
    <p class="m-0">
      {{ 'operatori.iter_completato' | trans({
        '%statusName%': pratica.statusName | trans,
        '%data%': pratica.latestStatusChangeTimestamp | date(ocsdc_default_date_format),
        '%ore%': pratica.latestStatusChangeTimestamp | date('H:i:s')})
       | raw}}
    </p>
  </div>
{% endif %}
