<div class="point-list-wrapper my-4">
  {% for timestamp, changes in pratica.storicoStati %}
    {% for change in changes %}
      <div class="point-list">
        <div class="point-list-aside point-list-primary">
        </div>
        <div class="point-list-content">
          <div class="card card-teaser rounded p-2">
            <div class="card-body">
              <b>{{ ('pratica.dettaglio.stato_'~change[0])| trans }}</b>
              <br>
              il {{ timestamp|date('d/m/Y') }} alle {{ timestamp|date('H:i') }}
              {% if change[1] is defined and change[1].message is defined %}
                <br><small>{{ change[1].message }}</small>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  {% endfor %}
</div>
