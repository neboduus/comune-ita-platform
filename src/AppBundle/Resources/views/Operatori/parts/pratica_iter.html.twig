<div class="point-list-wrapper my-4">
  {% for timestamp, changes in pratica.storicoStati %}
    {% for change in changes %}
      <div class="point-list">
        <div class="point-list-aside point-list-primary">
        </div>
        <div class="point-list-content">
          <div class="card card-teaser rounded p-2">
            <div class="card-body">
              <b>{{ ('pratica.dettaglio.stato_'~change[0])| trans }}</b>
              <small class="d-block">il {{ timestamp|date('d/m/Y') }} alle {{ timestamp|date('H:i') }}</small>
              {% if change[1] is defined and change[1].operatore is defined %}
              <small>
                <svg class="icon icon-xs icon-secondary">
                  <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-user"></use>
                </svg>
                {{ change[1].operatore }}
              </small>
              {% endif %}
              {% if change[1] is defined and change[1].message is defined %}
                <br><small>{{ change[1].message }}</small>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      {% if change[1] is defined and change[1].operatore is defined and change[1].operatore != pratica.operatore.fullName %}
        <div class="point-list">
          <div class="point-list-aside point-list-primary">
          </div>
          <div class="point-list-content">
            <div class="card card-teaser rounded p-2">
              <div class="card-body">
                <b>{{ 'pratica.dettaglio.cambio_operatore'| trans }} </b>
                <small class="d-block text-secondary">{{ change[1].operatore }}</small>
                  <small>
                    <svg class="icon icon-xs icon-secondary">
                      <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-user"></use>
                    </svg>
                    {{ pratica.operatore.fullName }}
                  </small>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  {% endfor %}
</div>
