{% extends '@App/Default/index.html.twig' %}

{% block main_content %}

    <pre>
        {{ dump(operatori) }}
    </pre>

    <table class="table table-striped">
        <thead>
        <tr>
            <td>{{ 'operatori.lista.nome'|trans }}</td>
            <td>{{ 'operatori.lista.cognome'|trans }}</td>
            <td>{{ 'operatori.lista.ambito'|trans }}</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {% for operatore in operatori %}
            <tr class="operatore"
                data-pratica="{{ operatore.id }}">

                <td>{{ operatore.nome }}</td>
                <td>{{ operatore.cognome }}</td>
                <td>{{ operatore.ambito }}</td>
                <td>
                    <a href="{{ path('operatori_detail', {'operatore': operatore.id}) }}"
                       class="btn btn-primary btn-xs">{{ 'operatori.vai_al_dettaglio'|trans }}</a>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
