{% extends '@App/Default/index.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/w/bs4/dt-1.10.18/datatables.min.css"/>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}

{% block main_content %}
  <section id="intro" class="container px-4 my-4">
    <div class="row">
      <div class="col-lg-12 px-lg-4 py-lg-2">
        <h1>Servizi a sottoscrizione</h1>
      </div>

      <div class="col-lg-12 px-lg-4 py-lg-2 mt-4">
        <div id="no-more-tables">
          <table class="table table-bordered table-striped table-condensed cf">
            <thead>
            <tr>
              <th>Nome</th>
              <th>Codice</th>
              <th>Stato</th>
              <th>Iscrizioni</th>
              <th>Data di inizio</th>
              <th>Data di fine</th>
              <th>Azioni</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
              <tr>
                <td>
                  <a href="{{ path('operatori_subscription-service_show', { 'subscriptionService': item.id }) }}">{{ item.name }}</a>
                </td>
                <td>
                  {{ item.code }}
                </td>
                <td>
                  {{ statuses[item.status] }}
                </td>
                <td>
                  {% if item.subscribersLimit %}{{ item.subscriptions.count }} di {{ item.subscribersLimit }}
                  {% else %} {{ item.subscriptions.count }}
                  {% endif %}
                </td>
                <td>
                  {{ item.beginDate |date('Y-m-d')}}
                </td>
                <td>
                  {{ item.endDate|date('Y-m-d') }}
                </td>
                <td width="20%">
                  <a class="btn btn-warning btn-sm" href="{{ path('operatori_subscription-service_edit', { 'subscriptionService': item.id }) }}">Modifica</a>
                  <a class="btn btn-danger btn-sm" onclick="return confirm('Sei sicuro di procedere? il servizio a sottoscrizione verrÃ  eliminato definitivamente.');" href="{{ path('operatori_subscription-service_delete', { 'id': item.id }) }}">Elimina</a>
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
        <a class="btn btn-success btn-primary" href="{{ path('operatori_subscription-service_new') }}">Crea nuovo servizio a sottoscrizione</a>
      </div>
    </div>
  </section>
{% endblock %}
