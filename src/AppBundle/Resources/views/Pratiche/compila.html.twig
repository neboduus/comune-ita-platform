        {#</div>
    </div>#}

    <div class="modal fade" id="confirm" tabindex="-1"
         role="dialog"
         aria-labelledby="confirmAutoAssignLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    {{ 'pratica.guida_alla_compilazione.sei_sicuro_di_inviare'|trans }}
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn">{{ 'pratica.guida_alla_compilazione.no'|trans }}</button>
                    <button type="button" data-dismiss="modal" class="btn btn-primary" id="ok">{{ 'pratica.guida_alla_compilazione.si'|trans }}</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


