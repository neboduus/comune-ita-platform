<div class="row">
    <div class="col-xs-12 col-sm-3"><strong>{{ 'steps.scia.allegati_modulo_scia.label'|trans() }}</strong></div>
    <div class="col-xs-12 col-sm-9">
        {% for key, v in pratica.dematerializedForms.elencoAllegatiAllaDomanda %}
            {% if v|length > 0 %}
                <ul class="list-group mb-2">
                    <li class="list-group-item">{{ ('steps.scia.allegati_modulo_scia.files.' ~ key ~ '.title')|trans() }}</li>
                    {% for f in v %}
                        {% if f.id|length>0 %}
                            <li class="list-group-item scia-file">
                              {{ f.name }} {% if allegati[f.id] is defined and allegati[f.id] %}<br /><small>( {{ allegati[f.id] }} )</small>{% endif %}
                                <div class="float-right">{{ include('AppBundle:Pratiche/summary/parts:download_allegato.html.twig', {'pratica':pratica, 'user': user, 'allegato_id': f.id}) }}</div>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            {% endif %}
        {% endfor %}
    </div>
</div>
