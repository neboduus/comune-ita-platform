<div class="row">
    <div class="col-xs-12 col-sm-3">
        <strong>{{ 'steps.scia.allegati_tecnici.tipo_intervento_label'|trans() }}</strong>
    </div>
    <div class="col-xs-12 col-sm-9">{% if pratica.dematerializedForms.tipoIntervento %}
            {{ ('steps.scia.allegati_tecnici.tipi_intervento.' ~ pratica.dematerializedForms.tipoIntervento)|trans() }}
        {% endif %}</div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-3"><strong>{{ 'steps.scia.allegati_tecnici.label'|trans() }}</strong></div>
    <div class="col-xs-12 col-sm-9">
        {% set has_data = false %}
        {% if pratica.dematerializedForms.elencoAllegatiTecnici is defined %}
            {% for key, v in pratica.dematerializedForms.elencoAllegatiTecnici %}
                {% if v|length > 0 %}
                    {% set has_data = true %}
                    <ul class="list-group">
                        <li class="list-group-item">{{ ('steps.scia.allegati_tecnici.files.' ~ key ~ '.title')|trans() }}</li>
                        {% for f in v %}
                            {% if f.id|length>0 %}
                                <li class="list-group-item scia-file">
                                    <i class="fa fa-file" aria-hidden="true"></i> {{ f.name }}
                                    <div class="pull-right">{{ include('AppBundle:Pratiche/summary/parts:download_allegato.html.twig', {'pratica':pratica, 'user': user, 'allegato_id': f.id}) }}</div>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endif %}
            {% endfor %}
        {% endif %}
        {% if not has_data %}
            <em>{{ 'pratica.non_specificato'|trans() }}</em>
        {% endif %}
    </div>
</div>