{% extends '@App/Default/index.html.twig' %}

{% block stylesheets %}
  {{ encore_entry_link_tags('compile') }}

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://unpkg.com/formiojs@latest/dist/formio.full.min.css">
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('compile') }}

  <script src="{{ asset('bundles/app/js/formio-i18n.js') }}"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"
          integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
          crossorigin="anonymous"></script>


{% endblock %}

{% block main_content %}

  <section id="intro" class="container px-4 my-4">
    <div class="row">
      <div class="col-12 px-lg-4 py-lg-2">
        <h1>{{ pratica.servizio.name }}</h1>
      </div>

      <div class="col-lg-8 px-lg-4 py-lg-2">
        {% if pratica.servizio.finalIndications %}
          <div class="alert alert-info">
            <p>{{ pratica.servizio.finalIndications | raw }}</p>
          </div>
        {% endif %}
        {{ include('AppBundle:Pratiche/parts:pratica_summary.html.twig', {'pratica':pratica}) }}
      </div>


      <div class="col-lg-3 offset-lg-1 pt-5 pt-lg-2 ">
        <div class="row">
          <div class="col-12 pb-5" style="border: 1px solid #ccc; background-color: #efefef;">
            {{ include('AppBundle:Pratiche/parts:pratica_iter.html.twig', {'pratica':pratica}) }}
          </div>

          <div class="col-12 mt-5">
            {% if (pratica.statusName == 'STATUS_DRAFT' or pratica.statusName == 'STATUS_DRAFT_FOR_INTEGRATION') and user.id == pratica.user.id %}
              <h4>Azioni</h4>
              <a class="btn btn-success btn-lg btn-block" style="margin-bottom: 30px" data-action="edit_draft"
                 href="{{ path('pratiche_compila', {'pratica': pratica.id, 'instance': pratica.instanceId, 'step': pratica.lastCompiledStep}) }}">
                <i class="fa fa-arrow-circle-o-right"></i>
                {{ 'pratica.vai_alla_pratica'|trans }}
              </a>
            {% endif %}
          </div>
        </div>
        {#{{ include('@App/Default/parts/chat.html.twig') }}#}
      </div>
    </div>
  </section>
{% endblock %}

