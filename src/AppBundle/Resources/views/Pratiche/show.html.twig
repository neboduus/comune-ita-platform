{% extends '@App/Default/index.html.twig' %}

{% block stylesheets %}
  {{ encore_entry_link_tags('compile') }}

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://unpkg.com/formiojs@latest/dist/formio.full.min.css">
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('compile') }}

  <script src="{{ asset('bundles/app/js/formio-i18n.js') }}"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"
          integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
          crossorigin="anonymous"></script>

  {% if pratica.statusName == 'STATUS_PRE_SUBMIT'
    or (pratica.statusName == 'STATUS_SUBMITTED' and pratica.servizio.isProtocolRequired and not pratica.numeroProtocollo )
    or pratica.statusName == 'STATUS_PRE_SUBMITTED_AFTER_INTEGRATION'
    or (pratica.status == 'STATUS_SUBMITTED_AFTER_INTEGRATION' and pratica.servizio.isProtocolRequired and not pratica.numeroProtocollo )%}
  <script>
    $(document).ready(function() {
      setInterval(function() {
        window.location.reload();
      }, 60000);
    });
  </script>
  {% endif %}

{% endblock %}

{% block main_content %}

  <section id="intro" class="container px-4 my-4">
    <div class="row">
      <div class="col-12 px-lg-4 py-lg-2">
        <h1 data-status="{{ pratica.status }}" data-status_name="{{ pratica.statusName }}">{{ pratica.servizio.name }}</h1>
      </div>

      {# bottone di ripresa pratica in bozza (il bottone per inserire modifiche Ã¨ in summary) #}
      {% if can_compile and pratica.statusName == 'STATUS_DRAFT' %}
        <div class="col-12 mt-5 text-center">
          <p>
            <a class="btn btn-success btn-lg" style="margin-bottom: 30px" data-action="edit_draft"
               href="{{ path('pratiche_compila', {'pratica': pratica.id, 'instance': pratica.instanceId, 'step': pratica.lastCompiledStep}) }}">
              <i class="fa fa-pencil"></i>
              {{ 'pratica.vai_alla_pratica'|trans }}
            </a>
          </p>
        </div>
      {% endif %}

      <div class="col-lg-8 px-lg-4 py-lg-2">
        {% if pratica.servizio.finalIndications and pratica.status >= 1900 and pratica.status <= 3000 %}
          <div class="alert alert-info">
            {{ pratica.servizio.finalIndications | raw }}
          </div>
        {% endif %}
        {{ include('AppBundle:Pratiche/parts:pratica_summary.html.twig', {'pratica':pratica}) }}
      </div>


      <div class="col-lg-3 offset-lg-1 pt-5 pt-lg-2 ">
        <div class="row">
          <div class="col-12">
            {{ include('AppBundle:Pratiche/parts:pratica_iter.html.twig', {'pratica':pratica}) }}
          </div>
          {% if pratica.userCompilationNotes %}
            <div class="col-12">
              <div id="compilationNotes" class="callout my-5">
                <div class="callout-title py-1 px-2">
                  <svg class="icon"><use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-note"></use></svg>
                  {{ 'pratica.le_tue_note'|trans }}
                </div>
                <div class="body">
                  <p>{{ pratica.userCompilationNotes}}</p>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
        {#{{ include('@App/Default/parts/chat.html.twig') }}#}
      </div>
    </div>
  </section>
{% endblock %}

