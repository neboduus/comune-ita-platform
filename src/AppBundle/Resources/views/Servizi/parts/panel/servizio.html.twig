{% set text_limit = 100 %}
{% if route is not defined %}
    {% set route = 'esplora_servizi_show' %}
{% endif %}
<article class="panel panel-default servizio">
    <div class="panel-body">
        {%  if servizio.area %}
            <p><i class="fa fa-circle"></i> {{ servizio.area }}</p>
        {% endif %}
        <h4><a href="{{ path('servizi_show', {'slug': servizio.slug}) }}">{{ servizio.name }}</a></h4>
        <p>{{ servizio.description|length > text_limit ? servizio.description|slice(0, text_limit) ~ '...' : servizio.description  }}</p>

        <div class="">
            <a class="btn btn-default" href="{{ path('servizi_show', {'slug': servizio.slug}) }}">
                <span class="fa-stack">
                  <i class="fa fa-circle-thin fa-stack-2x"></i>
                  <i class="fa fa-angle-right fa-stack-1x"></i>
                </span> Vai al servizio
            </a>
        </div>
    </div>
</article>
