{% set text_limit = 100 %}
{% if route is not defined %}
    {% set route = 'esplora_servizi_show' %}
{% endif %}
<article class="panel panel-default servizio sticky">
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-9">
                {%  if servizio.area %}
                    <small><i class="fa fa-circle"></i> {{ servizio.area.name }}</small>
                {% endif %}
                <h4><a href="{{ path('servizi_show', {'slug': servizio.slug}) }}">{{ servizio.name }}</a></h4>
                <p>{{ servizio.description|length > text_limit ? servizio.description|slice(0, text_limit) ~ '...' : servizio.description  }}</p>

                {% if servizio.enti|length > 1 %}
                    <p><small><b>{{ 'servizio.attivo_per'|trans }}</b></small>
                        {% for ente in servizio.enti %}<a href="{{ ente.siteUrl }}"><small>{{ ente.name }} </small></a>{% endfor %}
                    </p>
                {% endif %}
            </div>
            <div class="col-sm-3 action">
                <a class="btn btn-primary" href="{{ path('servizi_show', {'slug': servizio.slug}) }}">
                    <i class="fa fa-arrow-circle-o-right"></i>
                    {{ "servizio.vai"|trans()  }}
                </a>
            </div>
        </div>
    </div>
</article>
