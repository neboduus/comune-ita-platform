{% if pratica.moduliCompilati.count + pratica.allegati.count + messageAttachments|length  == 0 %}
  <div class="font-italic text-center">{{ 'operatori.messaggi.no_attachments' | trans }}</div>
{% endif %}

{# Moduli compilati #}
{% if pratica.moduliCompilati|length > 0 %}
  {{ include('@App/Allegato/parts/_header_attachments.html.twig', {'section_title': 'operatori.scarica'}) }}
  {% for modulo in pratica.moduliCompilati %}
    {{ include('@App/Allegato/parts/_line_attachment.html.twig', {'attachment': modulo}) }}
  {% endfor %}
{% endif %}

{# Allegati #}
{% if pratica.allegati.count > 0 %}
  <div class="pt-4">
    {{ include('@App/Allegato/parts/_header_attachments.html.twig', {'section_title': 'operatori.allegati_modulo'}) }}
    {% for allegato in pratica.allegati %}
      {{ include('@App/Allegato/parts/_line_attachment.html.twig', {'attachment': allegato}) }}
    {% endfor %}
  </div>
{% endif %}

{# Allegati ai messaggi #}
{% if messageAttachments|length > 0 %}
  <div class="pt-4">
    {{ include('@App/Allegato/parts/_header_attachments.html.twig', {'section_title': 'operatori.allegati_messaggi'}) }}
    {% for allegato in messageAttachments %}
      {{ include('@App/Allegato/parts/_line_attachment.html.twig', {'attachment': allegato}) }}
    {% endfor %}
  </div>
{% endif %}

{# Risposta operatore #}
{% if pratica.statusName == 'STATUS_COMPLETE' or pratica.statusName == 'STATUS_CANCELLED' %}
  {% if pratica.rispostaOperatore %}
    <div class="pt-4">
      {{ include('@App/Allegato/parts/_header_attachments.html.twig', {'section_title': 'operatori.scarica_risposta_firmata'}) }}
      {{ include('@App/Allegato/parts/_line_attachment.html.twig', {'attachment': pratica.rispostaOperatore}) }}
    </div>
  {% endif %}
{% endif %}
