<div class="text-right">
  {# EDIT #}
  {% if row.canEdit %}
    <a class="btn btn-xs btn-secondary"
      href="{{ path('operatori_calendar_edit', {'calendar': row.id}) }}">
      <svg class="icon icon-sm icon-white">
        <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-pencil"></use>
      </svg>
      <span class="d-none d-sm-inline-block d-lg-none d-xl-inline-block">{{ 'calendars.edit' | trans }}</span>
    </a>
  {% else %}
    <button data-toggle="tooltip" title="{{ 'calendars.cant_edit_tooltip' | trans }}" class="btn btn-xs btn-primary disabled">
      <svg class="icon icon-sm icon-300">
        <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-pencil"></use>
      </svg>
      <span class="d-none d-sm-inline-block d-lg-none d-xl-inline-block">{{ 'calendars.edit' | trans }}</span>
    </button>
  {% endif %}

  {# DELETE #}
  {% if row.canDelete %}
    <button class="btn btn-xs btn-danger" data-toggle="modal" data-target="#confirm-delete-modal-{{ row.id }}">
      <svg class="icon icon-sm icon-white">
        <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-delete"></use>
      </svg>
      <span class="d-none d-sm-inline-block d-lg-none d-xl-inline-block">{{ 'calendars.delete' | trans }}</span>
    </button>
  {% else %}
    <button data-toggle="tooltip" title="{{ 'calendars.cant_delete_tooltip' | trans({'%owner%': row.owner}) }}" class="btn btn-xs btn-primary disabled">
      <svg class="icon icon-sm icon-300">
        <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-delete"></use>
      </svg>
      <span class="d-none d-sm-inline-block d-lg-none d-xl-inline-block">{{ 'calendars.delete' | trans }}</span>
    </button>
  {% endif %}
</div>

<div id="confirm-delete-modal-{{ row.id }}" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog"
     aria-labelledby="" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <svg class="icon icon-danger">
          <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-warning-circle"></use>
        </svg>
        <h5 class=" modal-title text-danger align-self-center ml-2">{{ 'calendars.confirm_delete.title' | trans }}</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <svg class="icon">
            <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-close"></use>
          </svg>
        </button>
      </div>
      <div class="modal-body">
        <div>
          <h6 class="text-danger">{{ 'calendars.confirm_delete.description_title' | trans }}</h6>
          <p>{{ 'calendars.confirm_delete.description_text' | trans }}</p>
          {% if row.futureMeetings > 0 %}
            <p
              class="font-weight-semibold">{{ 'calendars.confirm_delete.future_meetings_alert' | trans({'%num%': row.futureMeetings}) }}</p>
          {% endif %}
        </div>
        <div class="form-group mt-3">
          <input type="hidden" id="check-calendar-name-{{ row.id }}" readonly value="{{ row.title }}">
          <input type="text" class="form-control name-input disablepaste" id="input-calendar-name-{{ row.id }}"
                 placeholder="{{ 'calendars.confirm_delete.type_name_placeholder' | trans }}"
                 data-id="{{ row.id }}"
                 aria-describedby="modal-input-description">
          <p class="form-text text-muted">{{ 'calendars.confirm_delete.type_name' | trans }} <b>{{ row.title }}</b></p>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-outline-secondary btn-sm" type="button" id="cancel-delete-btn" data-dismiss="modal">
          {{ 'calendars.cancel'| trans }}
        </button>
        <button class="btn btn-danger btn-sm delete-btn" id="confirm-delete-btn-{{ row.id }}" data-id="{{ row.id }}"
                type="button" disabled
                data-url="{{ path('operatori_calendar_delete', {'id': row.id}) }}">
          {{ 'calendars.permanently_delete' | trans }}
        </button>
      </div>
    </div>
  </div>
</div>
