{% extends '::base.html.twig' %}

{% block title %}Stanza del cittadino{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/ita-bootstrap.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/jasny-bootstrap.min.css') }}"/>
{% endblock %}

{% block header %}
<header id="header">
    <div id="header-top" class="container-fluid clearfix">
        <div class="row">
            <div class="col-md-4 col-md-offset-2 col-xs-4 col-xs-offset-2">
                <div id="header-top-left" class="clearfix hidden-xs">
                    <a href="{{ header_top.link }}">{{ header_top.title }}</a>
                </div>
            </div>
        </div>
    </div>
    <div id="header-inside" class="container-fluid clearfix">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="row">
                    <div class="col-sm-1 hidden-xs">
                        <div id="logo">
                            <a href="{{ path('home') }}" title="Home" rel="home">
                                <img class="img-responsive pull-right" src="{{ asset('bundles/app/images/logo-stanza.png') }}" alt="{{ 'title'|trans }}" />
                            </a>
                        </div>
                    </div>
                    <div class="col-xs-10">
                        <div id="site-name">
                            <h1 style="margin-bottom: 0">
                                <a href="{{ path('home') }}" title="Home" style="color: #000">
                                    {{ 'title'|trans }}
                                </a>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock %}

{% block content_container %}
    <section id="main-content">
        <div class="container-fluid">
            <div class="row">
            {%  for ente in enti %}
                <div class="col-md-8 col-md-offset-2">
                    <article class="panel panel-default servizio">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-2">
                                    <img class="img-responsive" src="{{ asset('bundles/app/images/logo-' ~ ente.slug ~ '.png') }}" alt="{{ 'title'|trans }}" style="max-height: 76px" />
                                </div>
                                <div class="col-xs-10">
                                    <h4><a href="/{{ ente.slug }}">{{ ente.name }}</a></h4>
                                    <p>Entra nella stanza del cittadino del {{ ente.name }}</p>
                                </div>
                            </div>
                            
                        </div>
                    </article>
                </div>
            {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block footer %}
{% endblock %}

{% block javascripts %}
    <!-- !Javascript - at the bottom for fast page loading -->
    <script src="{{ asset('bundles/app/js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/app/js/jasny-bootstrap.min.js') }}"></script>
    <script>
        $(document).ready(function($) {

            var $wrap = $(window),
                    $header = $("#header"),
                    headerHeight = $header.outerHeight(),
                    headerTopHeight = $("#header-top").outerHeight(),
                    headerInsideHeight = $("#header-inside").outerHeight();

            $wrap.on('scroll', function(e) {
                if ($wrap.scrollTop() > headerTopHeight + headerInsideHeight
                        && $wrap.width() > 200
                ) {
                    $header.addClass("header-fixed");
                } else {
                    $header.removeClass("header-fixed");
                }
            });
            $('.has_tooltip').tooltip();
        });
    </script>
    {{ include('@App/Default/footer/devscripts.html.twig') }}
{% endblock %}
