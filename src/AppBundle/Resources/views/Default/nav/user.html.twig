{% if is_granted('ROLE_OPERATORE') %}
    <div class="bg-100 pt-3 pb-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="menu-wrapper user-menu">
                        <ul class="nav justify-content-center">
                            <li class="nav-item {% if  'parametri-protocollo' not in app.request.pathInfo and 'usage' not in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link " href="{{ path('operatori_index') }}">
                                    <i class="fa fa-tachometer"
                                       aria-hidden="true"></i> {{ 'nav.operatori.panello_controllo'|trans }}
                                </a>
                            </li>
                            <li class="nav-item {% if 'parametri-protocollo' in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link "
                                   href="{{ path('operatori_impostazioni_protocollo_list') }}">
                                    <i class="fa fa-book"
                                       aria-hidden="true"></i> {{ 'nav.operatori.protocollo'|trans }}
                                </a>
                            </li>
                            <li class="nav-item {% if 'usage' in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link " href="{{ path('operatori_usage') }}">
                                    <i class="fa fa-bar-chart"
                                       aria-hidden="true"></i> {{ 'nav.operatori.usage'|trans }}
                                </a>
                            </li>
                            {% if is_granted('ROLE_OPERATORE_ADMIN') %}
                                <li class="nav-item {% if 'operatori/list' in app.request.pathInfo %} active {% endif %}">
                                    <a class="nav-link "
                                       href="{{ path('operatori_list_by_ente') }}">
                                        <i class="fa fa-user"
                                           aria-hidden="true"></i> {{ 'nav.operatori.lista_operatori'|trans }}
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% elseif is_granted('ROLE_ADMIN') %}
    <div class="bg-100 pt-3 pb-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="menu-wrapper user-menu">
                        <ul class="nav justify-content-center">
                            <li class="nav-item {% if 'ente' in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link "
                                   href="{{ path('admin_edit_ente') }}">
                                    Impostazioni istanza
                                </a>
                            </li>
                            <li class="nav-item {% if 'operatore' in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link "
                                   href="{{ path('admin_operatore_index') }}">
                                    Operatori
                                </a>
                            </li>
                            <li class="nav-item {% if 'logs' in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link "
                                   href="{{ path('admin_logs_index') }}">
                                    Logs
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="bg-100 pt-3 pb-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="menu-wrapper user-menu">
                        <ul class="nav justify-content-center">
                            <li class="nav-item {% if 'dashboard' in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link " href="{{ path('user_dashboard') }}">
                                    <i class="fa fa-tachometer"
                                       aria-hidden="true"></i> {{ 'nav.dashboard'|trans }}
                                </a></li>
                            <li class="nav-item {% if 'servizi' in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link " href="{{ path('servizi_list') }}">
                                    <i class="fa fa-cubes"
                                       aria-hidden="true"></i> {{ 'nav.servizi'|trans }}
                                </a></li>
                            <li class="nav-item {% if 'pratiche' in app.request.pathInfo and 'allegati' not in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link " href="{{ path('pratiche') }}">
                                    <i class="fa fa-files-o"
                                       aria-hidden="true"></i> {{ 'nav.pratiche'|trans }}
                                </a>
                            </li>
                            <li class="nav-item {% if 'profilo' in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link " href="{{ path('user_profile') }}">
                                    <i class="fa fa-user"
                                       aria-hidden="true"></i> {{ 'nav.profilo'|trans }}
                                </a></li>
                            <li class="nav-item {% if 'allegati' in app.request.pathInfo %} active {% endif %}">
                                <a class="nav-link " href="{{ path('allegati_list_cpsuser') }}">
                                    <i class="fa fa-user"
                                       aria-hidden="true"></i> {{ 'nav.allegati'|trans }}
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}

