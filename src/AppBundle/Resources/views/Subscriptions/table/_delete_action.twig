<button class="btn btn-xs btn-danger" data-toggle="modal" data-target="#delete-subscription-modal" data-id="{{ id }}"
        data-subscription-service-id="{{ subscriptionServiceId }}"
        data-url="{{ path('subscription_api_delete_v2', {'id': id, 'version': 2}) }}"
        data-redirect="{{ path('operatori_subscriber_show', {'subscriber': subscriberId, 'tab': 'subscriptions', 'show_subscription': id}) }}">
  <svg class="icon icon-sm icon-white">
    <use xlink:href="/bootstrap-italia/dist/svg/sprite.svg#it-delete"></use>
  </svg>
  <span class="">{{ 'elimina' | trans }}</span>
</button>
